---
// data imports

import { Image } from "astro:assets";
import { Icon } from 'astro-icon/components';

import type { CollectionEntry } from "astro:content";


type Props = {
    project: CollectionEntry<'projects'>
}

const { project } = Astro.props


---
 <div class="w-[100%] sm:max-w-[50%] sm:flex-grow-0 sm:flex-shrink-0 px-4">

    <div class="table table-fixed w-[100%] h-[100%] rounded-lg mb-5 border-2 border-b-slate-100">
        <div class="table-cell w-80 h-[100%] bg-[#f5f5f5] align-middle p-2">
            <Image
                src={project.data.image}
                width={250}
                height={350}
                alt=""
            />
        </div>
        <div class="table-cell w-[100%] h-[100%] py-2 px-4 align-middle">
            <div>
                <h4 class="text-base">{project.data.title}</h4>
            </div>
            <div class="text-sm py-3 text-[#777]">
                <span>{project.data.short_description}</span>
            </div>
            
                {
                    project.data.blog_post_link != undefined && project.data.blog_post_link.length != 0 && (
                    <a href={project.data.blog_post_link} target="_blank">
                       <span class="inline-flex items-stretch text-sm text-[#777]">
                        <Icon name="mdi:blog" size={20} class:list="cursor-pointer" />  
                        <span>&nbsp;blog post</span>
                      </span>
                      </a>
                    )
                }
                &nbsp;
          
                {
                    project.data.blog_post_link != undefined && project.data.blog_post_link.length != 0 && (
                    <a href={project.data.github_repo_link} target="_blank">
                        <span class="inline-flex items-stretch text-sm text-[#777]">
                            <Icon name="mdi:code" size={20} class:list="cursor-pointer" />  
                            <span>&nbsp;source code</span>
                        </span>
                    </a>
                       
                    )
                }
           

        </div>
</div>
        
