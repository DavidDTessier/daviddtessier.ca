---
// data imports

import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

type Props = {
    credential: CollectionEntry<'credentials'>
}

const { credential } = Astro.props


---
 <div class="w-[100%] sm:max-w-[50%] sm:flex-grow-0 sm:flex-shrink-0 px-4">
    <a href={credential.data.credential_link} target="_blank">
        <div class="table table-fixed w-[100%] rounded-lg mb-5 border-2 border-b-slate-100">
            <div class="table-cell w-52 h-[100%] bg-[#f5f5f5] align-middle p-6">
                <Image
                    src={credential.data.badge}
                    width={150}
                    height={150}
                    alt={credential.data.name}
                />
            </div>
            <div class="table-cell w-[100%] py-5 px-6 align-middle">
                <div>
                    <h4 class="text-base">{credential.data.name}</h4>
                </div>
                <div class="text-sm text-[#777]">
                    <span>Issued: {credential.data.issued_date}</span>
                </div>
                {
                    credential.data.renewed_date != undefined && credential.data.renewed_date.length != 0 && (
                        <div class="text-sm text-[#777]">
                            <span>Renewed: {credential.data.renewed_date}</span>
                        </div>
                    )
                }
                {
                    credential.data.expired_date != undefined && credential.data.expired_date.length != 0 && (
                        <div class="text-sm text-red-600">
                            <span>Expired: {credential.data.expired_date}</span>
                        </div>
                    )
                }
            </div>
        </div>
    </a>
</div>
        
