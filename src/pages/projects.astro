---
import H1 from "../components/H1.astro";
import Main from "../components/Main.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import ProjectList from "../components/ProjectList.astro";
import { getCollection } from "astro:content";


import { Icon } from 'astro-icon/components';

const projects = await getCollection("projects");

---

<BaseLayout title="Projects | David Tessier">
    <Main>
        <section>
            <div class="m-4">
                <H1 text="Personal & OSS Projects" />
                <hr class="border-2 border-slate-400 w-28 mb-4" />
                <p class="my-3">
                  The following are several personal or open source projects that I am working and/or contributed to over the course of my career.
                </p>
                <div>
                    <ProjectList projects={projects} />
                </div>
